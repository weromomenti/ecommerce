{
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "orders": {
        "ClusterId": "ordersCluster",
        "Match": {
          "Path": "/orders/{**catch-all}"
        },
        "Transforms": [
          {
            "PathSet": "/api/order"
          }
        ]
      }
    },
    "Clusters": {
      "ordersCluster": {
        "Destinations": {
          "ordersDestination": {
            "Address": "https://localhost:7266/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Path": "/health",
            "Policy": "ConsecutiveFailures"
          }
        }
      }
    }
  }
}
